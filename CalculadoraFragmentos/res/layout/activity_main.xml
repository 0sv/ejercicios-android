<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.arkaitzgarro.calculadorafragmentos.MainActivity"
    tools:ignore="MergeRootFrame" >

    <fragment
        android:id="@+id/display_fragment"
        android:name="com.arkaitzgarro.calculadorafragmentos.DisplayFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <fragment
        android:id="@+id/keyboard_fragment"
        android:name="com.arkaitzgarro.calculadorafragmentos.KeyboardFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
