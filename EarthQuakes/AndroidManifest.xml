<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.arkaitzgarro.earthquakes"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="com.arkaitzgarro.maps.permission.MAPS_RECEIVE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.arkaitzgarro.earthquakes.activitiy.MainActivity"
            android:label="@string/app_name"
            android:uiOptions="splitActionBarWhenNarrow" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.arkaitzgarro.earthquakes.activitiy.DetailActivity"
            android:label="@string/title_activity_detaill"
            android:parentActivityName="com.arkaitzgarro.earthquakes.activitiy.MainActivity" >
        </activity>
        <activity
            android:name="com.arkaitzgarro.earthquakes.activitiy.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>

        <provider
            android:name="com.arkaitzgarro.earthquakes.provider.EarthQuakeProvider"
            android:authorities="com.arkaitzgarro.provider.earthquakes"
            android:exported="false" />

        <service
            android:name="com.arkaitzgarro.earthquakes.service.UpdateEarthQuakes"
            android:enabled="true" >
        </service>

        <activity
            android:name="com.arkaitzgarro.earthquakes.activitiy.WebViewActivity"
            android:label="@string/title_activity_web_view"
            android:parentActivityName="com.arkaitzgarro.earthquakes.activitiy.DetailActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.arkaitzgarro.earthquakes.activitiy.DetailActivity" />
        </activity>

        <receiver android:name="com.arkaitzgarro.earthquakes.receiver.EarthquakeAlarmReceiver" >
            <intent-filter>
                <action android:name="com.arkaitzgarro.earthquakes.ACTION_REFRESH_EARTHQUAKE_ALARM" />
            </intent-filter>
        </receiver>
        
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyAJTU_VsPeNgz5Q41Rzm2iaG0Chn2C1AFs" />
    </application>

</manifest>