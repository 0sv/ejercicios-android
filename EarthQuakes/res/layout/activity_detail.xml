<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/list_margin"
    tools:context="com.arkaitzgarro.earthquakes.activitiy.DetailActivity"
    tools:ignore="MergeRootFrame" >

    <TextView
        android:id="@+id/detail_magnitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:minWidth="50dp"
        android:text="[magnitude]"
        android:textSize="@dimen/list_mag_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/detail_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/detail_magnitude"
        android:text="TextView"
        android:textStyle="bold" />

</RelativeLayout>
